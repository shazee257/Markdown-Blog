<h1 class="mb-4">Blog Articles</h1>
<a href="/articles/new" class="btn btn-success">New Article</a>

{{#each articles}}
<div class="card mt-4">
    <div class="card-body">
        <h4 class="card-title">{{title}}</h4>
        <div class="card-subtitle text-muted">{{formatDate createdAt 'DD/MM/YYYY'}}</div>
        <div class="card-text mb-2">{{description}}</div>

        <a href="articles/{{slug}}" class="btn btn-primary">Read More</a>
        <a href="articles/edit/{{_id}}" class="btn btn-info">Edit</a>
        <form action="/articles/{{_id}}?_method=DELETE" method="POST" class="d-inline">
            <button type="submit" class="btn btn-danger">Delete</button>
        </form>
    </div>
</div>
{{/each}}